      #date-clock-div
        span#date-span
        span#clock-span

      script.
        var clockSpan = document.getElementById("clock-span");
        var dateSpan = document.getElementById("date-span");
        date_time();

        function date_time() {
          var date = new Date();
          var day = date.getDate();
          var month = date.getMonth() + 1;
          var year = date.getFullYear()
          var second = date.getSeconds();
          var minute = date.getMinutes();
          var hour = date.getHours();

          dateSpan.textContent =
            ("0" + day).substr(-2) + "-" + ("0" + month).substr(-2) + "-" + year;
          clockSpan.textContent =
            ("0" + hour).substr(-2) + ":" + ("0" + minute).substr(-2) + ":" + ("0" + second).substr(-2);
        }
        setInterval(date_time, 1000);

    form#register-form(action="/api/register", method="post")
      .register-login-upload
        ul
          li
            input#name(name="name" type="text" placeholder="Name" required)
            input#surname(name="surname" type="text" placeholder="Surname" required)
            input#email(name="email" type="email" placeholder="E-mail" required)
            input#password(name="password" type="password" placeholder="Password" required)
            input#password-again(name="passwordAgain" type="password" placeholder="Password Again" required)
      .register-login-upload
        input.register-login-upload-button(type="submit" value="Register")
      span#register-error-message

    script. 
      const passwordInput = document.getElementById("password");
      const passwordAgainInput = document.getElementById("password-again"); 
      const name = document.getElementById("name");
      const surname = document.getElementById("surname");
      const errorMessage = document.getElementById("register-error-message");
      const form = document.getElementById("register-form"); // DÃ¼zeltildi

      function validatePasswords(){
        const value = passwordInput.value;
        const valueAgain = passwordAgainInput.value;
        if (value.length < 5) {
          errorMessage.innerHTML = "Password length must not be less than 5!";
          errorMessage.style.display = "inline";
          return false;
        }
        else if (value.includes(" ")){
          errorMessage.innerHTML = "Password must not contain space character!";
          errorMessage.style.display = "inline";
          return false;
        }
        else if (value !== valueAgain){
          errorMessage.innerHTML = "Passwords must match!";
          errorMessage.style.display = "inline";
          return false;
        }
        return true;
      }

      form.addEventListener("submit", (e) => {
        if(!validatePasswords()){
          e.preventDefault();
        }
      });

      passwordInput.addEventListener("input", () => {
        errorMessage.style.display = "none";
      });
      passwordAgainInput.addEventListener("input", () => {
        errorMessage.style.display = "none";
      });